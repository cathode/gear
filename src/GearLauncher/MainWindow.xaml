<Window x:Class="GearLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GearLauncher" Height="320" Width="240" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <Image Height="72" Name="headerImage" Stretch="Fill" VerticalAlignment="Top" Source="header.png" />
        <Button Content="Launch Gear Client" Height="23" Margin="12,78,12,0" Name="launchClientBtn" VerticalAlignment="Top" Click="launchClientBtn_Click" />
        <Button Content="Launch Gear Server" Height="23" Margin="12,107,12,0" Name="launchServerBtn" VerticalAlignment="Top" Click="launchServerBtn_Click" />
        <Button Content="Launch Editor" Height="23" Margin="12,136,12,0" Name="launchEditorBtn" VerticalAlignment="Top" Click="launchEditorBtn_Click" />
    </Grid>
</Window>
